<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="30dp"
    android:paddingTop="50dp"
    android:paddingRight="30dp"
    tools:context=".Registration">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:text="주제"
            android:textColor="@color/TeamColor"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/R_ProjectName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            android:ems="10"
            android:hint="주제를 입력해주세요"
            android:inputType="textShortMessage"
            android:privateImeOptions="defaultInputmode=Korean"
            android:textAlignment="viewEnd"
            android:textSize="18sp" />
    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#8C9191"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="30dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:text="역할"
            android:textColor="@color/TeamColor"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/R_Role"
            android:layout_width="match_parent"
            android:layout_height="123dp"
            android:hint="팀원1 : 역할1\n팀원2 : 역할2\n팀원3 : 역할3\n팀원4 : 역할4"
            android:textAlignment="center"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="10dp">

        <Button
            android:id="@+id/R_RoleBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_baseline_control_point_24"
            android:clickable="true" />
    </LinearLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#8C9191" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="30dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:text="마감일"
            android:textColor="@color/TeamColor"
            android:textColorHighlight="@color/teal_700"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/R_Deadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="마감일을 입력해주세요"
            android:textAlignment="viewEnd"
            android:textSize="18sp" />

        <Button
            android:id="@+id/R_DeadlineBtn"
            android:layout_width="46dp"
            android:layout_height="27dp"
            android:background="@drawable/ic_baseline_arrow_forward_ios_24" />
    </LinearLayout>

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#8C9191" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="30dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:text="마감 시간"
            android:textColor="@color/TeamColor"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/R_ClosingTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="마감시간을 입력해주세요"
            android:textAlignment="center"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/R_EditBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#6D9773"
            android:text="수정하기"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />
    </LinearLayout>

</LinearLayout>