<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FeedbackActivity">

    <ImageView
        android:id="@+id/imgView"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="30dp"
        android:background="#00FFFFFF"
        android:src="@drawable/ic_baseline_mode_comment_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#6D9773" />

    <Button
        android:id="@+id/feedbackTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="78dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="179dp"
        android:background="#00ff0000"
        android:text="피드백 보내기"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/feedbackTitleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:ems="10"
        android:hint="Title"
        android:inputType="textUri"
        android:text="[모두의 팀플] "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgView" />

    <EditText
        android:id="@+id/feedbackEditText"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="30dp"
        android:ems="10"
        android:gravity="top"
        android:hint="문의 사항이나 서비스에 대한 피드백을 적어주세요."
        android:inputType="textMultiLine"
        android:scrollbars="vertical"
        android:textIsSelectable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/feedbackTitleText" />

    <ImageView
        android:id="@+id/attachFileImg"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="15dp"
        android:background="#00FFFFFF"
        android:src="@drawable/ic_baseline_attach_file_24"
        app:layout_constraintBottom_toBottomOf="@+id/feedbackEditText"
        app:layout_constraintStart_toStartOf="@+id/feedbackEditText"
        app:tint="@color/TeamColor" />

    <Button
        android:id="@+id/feedback_SubmitBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginStart="205dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/TeamColor"
        android:text="제출"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toStartOf="@+id/feedback_CancelBtn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/attachImg3" />

    <Button
        android:id="@+id/feedback_CancelBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:backgroundTint="#FF0000"
        android:text="취소"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/feedback_SubmitBtn"
        app:layout_constraintTop_toBottomOf="@+id/attachImg3" />

    <ImageView
        android:id="@+id/attachImg1"
        android:layout_width="41dp"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toStartOf="@+id/attachImg2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/feedbackEditText"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/attachImg2"
        android:layout_width="41dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toStartOf="@+id/attachImg3"
        app:layout_constraintStart_toEndOf="@+id/attachImg1"
        app:layout_constraintTop_toBottomOf="@+id/feedbackEditText"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/attachImg3"
        android:layout_width="41dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@+id/attachImg2"
        app:layout_constraintTop_toBottomOf="@+id/feedbackEditText"
        tools:srcCompat="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>