<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="419dp"
        android:layout_height="307dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <ImageView
        android:id="@+id/profileImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="39dp"
        app:layout_constraintBottom_toTopOf="@+id/calendarView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:mipmap/sym_def_app_icon" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-black"
        android:text="가나다"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView7"
        app:layout_constraintStart_toEndOf="@+id/profileImg"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginTop="20dp"
        android:text="님"
        android:textSize="19sp"
        app:layout_constraintBottom_toTopOf="@+id/textView7"
        app:layout_constraintStart_toEndOf="@+id/name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="35dp"
        android:text="안녕하세요!"
        android:textSize="19sp"
        app:layout_constraintBottom_toTopOf="@+id/calendarView"
        app:layout_constraintStart_toEndOf="@+id/profileImg"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/addButton"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:layout_marginTop="450dp"
        android:background="@drawable/ic_baseline_add_circle_outline_24"
        android:backgroundTint="#FFFFFF"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/calendarView" />

    <TextView
        android:id="@+id/backgroundText"
        android:layout_width="389dp"
        android:layout_height="194dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/green_rectangle_left_radius"
        android:gravity="center"
        android:paddingStart="10dp"
        android:paddingTop="4dp"
        android:paddingEnd="4dp"
        android:paddingBottom="4dp"
        android:text="\n\n\n\n추가 "
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnOne"
        android:layout_width="29dp"
        android:layout_height="38dp"
        android:layout_marginTop="250dp"
        android:background="#00ff0000"
        android:backgroundTint="#6D9773"
        android:text="●"
        android:textColor="#FFFFFF"
        android:textSize="8dp"
        app:layout_constraintEnd_toStartOf="@+id/btnTwo"
        app:layout_constraintTop_toBottomOf="@+id/calendarView" />

    <Button
        android:id="@+id/btnTwo"
        android:layout_width="29dp"
        android:layout_height="38dp"
        android:layout_marginTop="250dp"
        android:background="#00ff0000"
        android:backgroundTint="#6D9773"
        android:text="●"
        android:textColor="#FFFFFF"
        android:textSize="8dp"
        app:layout_constraintEnd_toStartOf="@+id/btnThree"
        app:layout_constraintTop_toBottomOf="@+id/calendarView" />

    <Button
        android:id="@+id/btnThree"
        android:layout_width="29dp"
        android:layout_height="38dp"
        android:layout_marginTop="250dp"
        android:background="#00ff0000"
        android:backgroundTint="#6D9773"
        android:text="●"
        android:textColor="#FFFFFF"
        android:textSize="8dp"
        app:layout_constraintEnd_toStartOf="@+id/btnFour"
        app:layout_constraintTop_toBottomOf="@+id/calendarView" />

    <Button
        android:id="@+id/btnFour"
        android:layout_width="29dp"
        android:layout_height="38dp"
        android:layout_marginTop="250dp"
        android:background="#00ff0000"
        android:backgroundTint="#6D9773"
        android:text="●"
        android:textColor="#FFFFFF"
        android:textSize="8dp"
        app:layout_constraintEnd_toStartOf="@+id/btnFive"
        app:layout_constraintTop_toBottomOf="@+id/calendarView" />

    <Button
        android:id="@+id/btnFive"
        android:layout_width="29dp"
        android:layout_height="38dp"
        android:layout_marginTop="250dp"
        android:background="#00ff0000"
        android:backgroundTint="#6D9773"
        android:text="●"
        android:textColor="#FFFFFF"
        android:textSize="8dp"
        app:layout_constraintStart_toEndOf="@+id/addButton"
        app:layout_constraintTop_toBottomOf="@+id/calendarView" />

    <Button
        android:id="@+id/btnSix"
        android:layout_width="29dp"
        android:layout_height="38dp"
        android:layout_marginTop="250dp"
        android:background="#00ff0000"
        android:backgroundTint="#6D9773"
        android:text="●"
        android:textColor="#FFFFFF"
        android:textSize="8dp"
        app:layout_constraintStart_toEndOf="@+id/btnFive"
        app:layout_constraintTop_toBottomOf="@+id/calendarView" />

</androidx.constraintlayout.widget.ConstraintLayout>