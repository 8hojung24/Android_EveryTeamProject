<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/placeView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    tools:context=".Schedule_registration">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="50dp">

        <Button
            android:id="@+id/back"
            android:layout_width="38dp"
            android:layout_height="match_parent"
            android:background="@drawable/ic_baseline_arrow_back_24" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="일정 등록"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="30dp">

        <TextView
            android:id="@+id/MemoTitle"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textColor="@color/TeamColor"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:ems="10"
            android:hint="제목을 입력하세요"
            android:textAlignment="textEnd"
            android:textSize="18sp" />
    </LinearLayout>

    <View
    android:id="@+id/textView6"
    android:layout_width="match_parent"
    android:layout_height="2px"
    android:background="#8C9191" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="30dp">
        <TextView
            android:id="@+id/Memo"
            android:layout_width="125sp"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textColor="@color/TeamColor"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ShowDate"
            android:layout_width="180sp"
            android:layout_height="wrap_content"
            android:hint="날짜"
            android:textAlignment="textEnd"
            android:textSize="18sp" />

        <Button
            android:id="@+id/ChooseDate"
            android:layout_width="46dp"
            android:layout_height="27dp"
            android:background="@drawable/ic_baseline_arrow_forward_ios_24"/>
    </LinearLayout>

    <View
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#8C9191" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="30dp">

        <TextView
            android:id="@+id/Time"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:text="Time"
            android:textColor="@color/TeamColor"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/closingTime1"
            android:layout_width="100dp"
            android:layout_height="31dp"
            android:background="#D6D3D3"
            android:hint="9:00"
            android:textAlignment="center"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:text="~"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/closingTime2"
            android:layout_width="100dp"
            android:layout_height="31dp"
            android:background="#D6D3D3"
            android:hint="10:00"
            android:textAlignment="center"
            android:textSize="18sp" />
    </LinearLayout>

    <View
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#8C9191" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="30dp">

        <TextView
            android:id="@+id/Place"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:text="Place"
            android:textColor="@color/TeamColor"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="TextView"
            android:textAlignment="viewEnd"
            android:textSize="18sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50sp"
        android:gravity="center">

        <Button
            android:id="@+id/addShedule"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#6D9773"
            android:text="추가하기"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

    </LinearLayout>



</LinearLayout>